<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="title"
            type="String" />
    </data>
    <RelativeLayout
        android:id="@+id/rel_sale_tar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_sale_tar_hdr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:fontFamily="@font/ufonts_com_klavika_bold_opentype"
            android:textColor="@color/appBlue"
            android:textSize="16sp"
            tools:text="@string/qty_sales_target" />

        <TextView
            android:id="@+id/txt_sale_tar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:fontFamily="@font/ufonts_com_klavika_regular_opentype"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/txt_sale_tar_hdr"
            android:background="@color/shimmer_placeholder" />

    </RelativeLayout>
</layout>