<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/logoIv"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/logo" />

            <Button
                android:id="@+id/salesmanBtn"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/divider_margin_16"
                android:backgroundTint="@color/appOrange"
                android:fontFamily="@font/ufonts_com_klavika_regular_opentype"
                android:text="@string/salesman"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/envSp"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/appVersionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="V 2.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>